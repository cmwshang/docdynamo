<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE doc SYSTEM "manifest.dtd">
<doc>
    <!-- System-wide variables  -->
    <variable-list>
        <!-- Required variables -->
        <variable key="dash">-</variable>
        <variable key="project-url-root">/</variable>

        <variable key="organization">Crunchy Data Solutions, Inc.</variable>
        <variable key="project">Crunchy Containers</variable>

        <!-- Logo locations -->
        <variable key="project-logo">logo.svg</variable>
        <variable key="logo">{[doc-path]}/output/latex/logo</variable>

        <!-- HTML variables  -->
        <variable key="prepare-date" eval="y">
            use Time::Local;

            my ($second, $minute , $hour, $mday, $month, $year) = localtime();
            $year += 1900;

            my @stryMonth = ('January', 'February', 'March', 'April', 'May', 'June',
                             'July', 'August', 'September', 'October', 'November', 'December');

            $stryMonth[$month] . ' ' . $mday . ', ' . $year;
        </variable>
        <variable key="html-footer">Prepared by Crunchy Data Solutions, Inc. &amp;mdash; {[prepare-date]}</variable>
        <variable key="html-logo">&lt;img src=&quot;{[project-logo]}&quot;&gt;</variable>

        <!-- PDF variables -->
        <variable key="pdf-title1">{[project]}</variable>
        <variable key="pdf-title2">my subtitle1</variable>
        <variable key="pdf-title3">my subtitle2</variable>


        <!-- <variable key='pdf-footer-left'>{[pdf-title1]}\\{[pdf-title3]}</variable>
        <variable key='pdf-footer-center'>\ \\-\ \thepage\ -</variable>
        <variable key='pdf-footer-right'>{[pdf-organization]}\\\today</variable>

        <variable key="pdf-file">CrunchyBackRest-UserGuide-{[version]}</variable> -->
    </variable-list>

    <source-list>
        <source key="install"/>
        <source key="usage"/>
        <source key="examples"/>
        <source key="containers"/>
    </source-list>

    <render-list>
        <render type="html">
            <render-source key="install" menu="Home"/>
            <render-source key="usage" menu="Usage"/>
            <render-source key="examples" menu="Examples"/>
            <render-source key="containers" menu="Containers"/>
        </render>

        <render type="pdf" file="Crunchy">
            <title1>{[pdf-title1]} Installation Guide</title1>
            <render-source key="install"/>
            <render-source key="containers"/>
        </render>

        <render type="markdown">
            <render-source key="containers" file="CONTAINERS.md"/>
        </render>
    </render-list>
</doc>
