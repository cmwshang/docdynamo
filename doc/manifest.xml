<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE doc SYSTEM "manifest.dtd">
<doc>
    <!-- System-wide variables  -->
    <variable-list>
        <!-- <variable key="project">PROJECT NAME HERE</variable> -->
        <variable key="dash">-</variable>

        <!-- Logo locations -->
        <variable key="logo">{[doc-path]}/output/latex/logo</variable>

        <!-- HTML variables  -->
        <variable key="prepare-date" eval="y">
            use Time::Local;

            my ($second, $minute , $hour, $mday, $month, $year) = localtime();
            $year += 1900;

            my @stryMonth = ('January', 'February', 'March', 'April', 'May', 'June',
                             'July', 'August', 'September', 'October', 'November', 'December');

            $stryMonth[$month] . ' ' . $mday . ', ' . $year;
        </variable>
        <variable key="html-footer">Prepared by Crunchy Data Solutions, Inc. &amp;mdash; {[prepare-date]}</variable>
    </variable-list>

    <source-list>
        <source key="index"/>
        <source key="usage"/>
    </source-list>

    <render-list>
        <render type="html">
            <render-source key="index" menu="Home"/>
            <render-source key="usage" menu="Usage"/>
        </render>

        <render type="pdf" file="index">
            <render-source key="index"/>
        </render>

        <render type="markdown">
            <render-source key="index" file="INDEX.md"/>
        </render>
    </render-list>
</doc>
